{
  "name": "@lzwme/simple-mock",
  "version": "1.4.2",
  "description": "Simple mock used in node server",
  "main": "dist/index.js",
  "typings": "index.d.ts",
  "module": "dist-module/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/lzwme/simple-mock.git"
  },
  "bugs": {
    "url": "https://github.com/lzwme/simple-mock/issues"
  },
  "keywords": [
    "apimock",
    "mock",
    "node",
    "express",
    "http-proxy"
  ],
  "author": {
    "name": "lzwme",
    "url": "https://lzw.me",
    "email": "lzwy0820@qq.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "bootstrap": "yarn || npm install",
    "start": "npm run bootstrap && npm run build && npm run serve",
    "dev": "run-s bootstrap watch serve",
    "serve": "run-s serve:*",
    "serve:www": "node --max_old_space_size=8192 -r ts-node/register/transpile-only server/www.ts -o",
    "serve:ws": "node --max_old_space_size=8192 --title=WS-PROXY-SERVER -r ts-node/register/transpile-only ws-proxy-server/index.ts -o",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s build test:*",
    "test:lint": "tslint --project . && prettier \"src/**/*[^.spec].ts\" --list-different",
    "test:unit": "nyc --silent ava",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\" \"test:unit -- --watch\"",
    "cov": "run-s build test:unit cov:html && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:send": "nyc report --reporter=lcov && codecov",
    "cov:summary": "nyc report --reporter=text-summary",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "clean": "trash build test dist dist-module",
    "version": "standard-version",
    "prepare-release": "run-s test cov:check version"
  },
  "dependencies": {
    "chalk": "*",
    "concat-stream": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/node": "^14.14.22",
    "@types/ws": "^7.4.0",
    "ava": "^3.15.0",
    "body-parser": "^1.19.0",
    "codecov": "^3.8.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "http-proxy": "^1.18.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "standard-version": "^9.1.0",
    "trash-cli": "^4.0.0",
    "ts-node": "*",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.3",
    "ws": "^7.4.2"
  },
  "ava": {
    "failFast": true,
    "files": [
      "dist/*.spec.js"
    ],
    "ignoredByWatcher": [
      "dist/*.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "prettier --parser typescript --write",
      "tslint -c tslint.json --fix",
      "git add"
    ],
    "*.json": [
      "prettier --parser json --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
