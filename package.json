{
  "name": "@lzwme/simple-mock",
  "version": "1.5.1",
  "description": "Simple mock used in node server",
  "main": "dist/index.js",
  "typings": "index.d.ts",
  "module": "dist-module/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/lzwme/simple-mock.git"
  },
  "bugs": {
    "url": "https://github.com/lzwme/simple-mock/issues"
  },
  "keywords": ["apimock", "mock", "node", "express", "http-proxy"],
  "author": {
    "name": "lzwme",
    "url": "https://lzw.me",
    "email": "lzwy0820@qq.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "bootstrap": "yarn || npm install",
    "start": "npm run bootstrap && npm run build && npm run serve",
    "dev": "run-s bootstrap watch serve",
    "serve": "run-s serve:*",
    "serve:www": "node --max_old_space_size=8192 -r ts-node/register/transpile-only server/www.ts -o",
    "serve:ws": "node --max_old_space_size=8192 --title=WS-PROXY-SERVER -r ts-node/register/transpile-only ws-proxy-server/index.ts -o",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s build test:*",
    "test:unit": "nyc --silent ava",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\" \"test:unit -- --watch\"",
    "cov": "run-s build test:unit cov:html",
    "cov:html": "nyc report --reporter=html",
    "cov:send": "nyc report --reporter=lcov && codecov",
    "cov:summary": "nyc report --reporter=text-summary",
    "cov:check": "nyc report && nyc check-coverage --lines 10 --functions 10 --branches 10",
    "clean": "trash build test dist dist-module",
    "version": "standard-version",
    "prepare-release": "run-s test cov:check version",
    "prepare": "husky install"
  },
  "dependencies": {
    "concat-stream": "^2.0.0",
    "console-log-colors": "^0.2.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@lzwme/fed-lint-helper": "^1.5.0",
    "@types/eslint": "^8.4.1",
    "@types/node": "^17",
    "@types/ws": "^8.5.2",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "ava": "^4.1.0",
    "body-parser": "^1.19.2",
    "codecov": "^3.8.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "ejs": "^3.1.6",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-ava": "^13.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.3",
    "http-proxy": "^1.18.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "trash-cli": "^5.0.0",
    "ts-node": "*",
    "typescript": "^4.6.2",
    "ws": "^8.5.0"
  },
  "ava": {
    "failFast": true,
    "files": ["dist/**/*.spec.js"],
    "ignoredByWatcher": ["dist/*.js"]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": ["**/*.spec.js"]
  }
}
